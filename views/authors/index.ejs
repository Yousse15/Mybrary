
<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name :</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author=>{ %>
<div>
    <p><%= author.name %></p>
    <a class="button" href="/authors/<%=author.id %>">view</a>
    <a class="button" href="/authors/<%=author.id %>/edit">edit</a>
    <%-include('../partials/_deleteForm.ejs',{
        url:"/authors/"+author.id
    })%> 
</div>
<% }) %> 