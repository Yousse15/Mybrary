<h2 class="page-header"><%= author.name %> </h2>

<a class="button" href="/authors/<%=author.id %>/edit">edit</a>
<%-include('../partials/_deleteForm.ejs',{url:"/authors/"+author.id}) %> 
<% if(booksByAuthor.length>0){%> 
<h2>Books by Author</h2>
<% booksByAuthor.forEach(book=>{ %>
    <a href="/books/<%= book.id %>">
        <img height="180" width="130" src="<%= book.coverImagePath %>" alt="book cover">
    </a>    
<% }) }%> 