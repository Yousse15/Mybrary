
<label for="title">Title</label>
<input type="text" name="title" value="<%= book.title %>" required>
<label for="author">Author</label>
<select name="author" required>
        <% authors.forEach(author=>{
            if(author.id==book.author){ %>
               <option selected label="<%= author.name %>" value="<%= author.id %>">
            <%}
            else{%>
             <option label="<%= author.name %>" value="<%= author.id %>">
            <%}%>    
    <% }) %> 
 </select>
 <br>
<label for="publishDate">Publish Date</label>
 <input type="date" required name="publishDate" value="<%=book.publishDate==null?'':book.publishDate.toISOString().split('T')[0]%>">
<label for="pageCount">Page Count</label>
<input type="number" name="pageCount" min="1" max="10000" value="<%= book.pageCount %>" required>
 <br>
<label for="cover">Cover</label>
<input type="file" name="cover" accept=".jpg,.png,.gif" class="filepond" credits={,} required>
<label for="description">Description</label>
<textarea name="description" ><%= book.description %></textarea>
<br>


